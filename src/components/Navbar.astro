  <script>
    // Script para detectar la sección activa y aplicar clase 'active'
    document.addEventListener('DOMContentLoaded', () => {
      const sections = document.querySelectorAll('section[id]');
      const navLinks = document.querySelectorAll('nav a');
      
      function highlightActiveSection() {
        const scrollY = window.scrollY;
        
        sections.forEach(section => {
          // Usar aserción de tipo para solucionar el error de TypeScript
          const htmlSection = section as HTMLElement;
          const sectionTop = htmlSection.offsetTop - 100;
          const sectionHeight = htmlSection.offsetHeight;
          const sectionId = section.getAttribute('id');
          
          if (scrollY >= sectionTop && scrollY < sectionTop + sectionHeight) {
            navLinks.forEach(link => {
              // Buscar el span dentro del enlace
              const indicator = link.querySelector('span');
              
              // Remover indicador activo de todos los enlaces
              if (indicator) {
                indicator.classList.remove('scale-x-100');
                indicator.classList.add('scale-x-0');
              }
              
              // Aplicar indicador a la sección activa
              if (link.getAttribute('href') === `#${sectionId}`) {
                const activeIndicator = link.querySelector('span');
                if (activeIndicator) {
                  activeIndicator.classList.remove('scale-x-0');
                  activeIndicator.classList.add('scale-x-100');
                }
              }
            });
          }
        });
      }
      
      // Inicializar y añadir el evento de scroll
      highlightActiveSection();
      window.addEventListener('scroll', highlightActiveSection);
    });
  </script>