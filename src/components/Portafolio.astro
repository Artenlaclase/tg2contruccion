---
import FadeInSection from './FadeInSection.jsx';
---

<section id="portafolio" class="py-24 px-6 bg-black text-white">
  <FadeInSection>
    <div class="max-w-6xl mx-auto text-center">
      <h2 class="text-3xl md:text-5xl font-bold mb-12">Portafolio</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <div class="overflow-hidden rounded-xl">
          <img src="/assets/obra1.jpg" alt="Proyecto 1" class="w-full h-64 object-cover hover:scale-105 transition duration-500" />
        </div>
        <div class="overflow-hidden rounded-xl">
          <img src="/assets/obra2.jpg" alt="Proyecto 2" class="w-full h-64 object-cover hover:scale-105 transition duration-500" />
        </div>
        <div class="overflow-hidden rounded-xl">
          <img src="/assets/obra3.jpg" alt="Proyecto 3" class="w-full h-64 object-cover hover:scale-105 transition duration-500" />
        </div>
        <!-- Agrega más bloques si tienes más imágenes -->
      </div>
    </div>
  </FadeInSection>
</section>
